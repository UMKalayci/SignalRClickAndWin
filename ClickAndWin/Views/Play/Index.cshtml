@model AgModel
@{
    Layout = "";
}

@{
    ViewData["Title"] = "Oyun";
}
<!DOCTYPE html>
<html lang="en" style="height:100%">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClickAndWin</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/signalr.js"></script>
    <script src="~/js/play.js"></script>
</head>
<body style="height:100%">
    <div class="border border-primary col-md-12" style="height:100%;">
        <div class="col-md-12 row">
            <div class="col-md-6"><h5>PUANIN :</h5><h5 id="kullanici">0</h5></div>
            <div class="col-md-6" style="text-align:right"><h5>Rakip :</h5><h5 id="rakip">0</h5></div>
        </div>
        @for (int sno = 0; sno < 10; sno++)
        {
            <div class="row" style="height:10%">
                <div id="column1@(sno)" onclick="DivClick('column1@(sno)')" class="col">
                </div>
                <div id="column2@(sno)" onclick="DivClick('column2@(sno)')" class="col">
                </div>
                <div id="column3@(sno)" onclick="DivClick('column3@(sno)')" class="col">
                </div>
                <div id="column4@(sno)" onclick="DivClick('column4@(sno)')" class="col">
                </div>
                <div id="column5@(sno)" onclick="DivClick('column5@(sno)')" class="col">
                </div>
            </div>
        }

    </div>
</body>
</html>
